{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": ".build",
    "baseUrl": ".",
    "paths": {
      "@functions/*": ["src/functions/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": [
    "node_modules",
    ".serverless",
    ".build"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}